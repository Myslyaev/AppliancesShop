@page "/productstest"

<PageTitle>Каталог товаров</PageTitle>
<table align="center">
    <tr>
    @foreach (var i in _productTypes)
    {
            <td width="300px">
        <ProductTypeCard productType=i></ProductTypeCard>
            </td>
    }
    </tr>
</table>

@code
{
    private List<ProductTypeOutputModel> _productTypes;

    private ProductTypeClient _productTypeClient;

    public Productstest()
    {
        _productTypeClient = new ProductTypeClient();
    }

    protected override void OnInitialized()
    {
        _productTypes = _productTypeClient.GetAllProductTypes();
        
    }
}
